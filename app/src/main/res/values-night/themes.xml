<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aprobaciones" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorQuantum</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Aprobaciones.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Aprobaciones.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Aprobaciones.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.Aprobaciones">

        <item name="android:windowBackground">@drawable/colorcombinado</item>

    </style>

    <style name="ProgressBarStyle"> <item name="colorAccent">@color/colorPrueba</item> </style>

    //Fondo para Noche/Dia
    <style name="backgroundImg"><item name="android:background">@color/backgroundColor</item></style>

    //Logo Quantum Noche/Dia
    <style name="srcQuantumLogo">
        <item name="android:background">@drawable/lg_quantum_cabezal_blanco</item>
    </style>
    //Q del background Noche/Dia
    <style name="srcQuantumBackground"><item name="android:background">@drawable/q_blanca</item>
        <item name="android:backgroundTint">#202b30</item>
    </style>

</resources>